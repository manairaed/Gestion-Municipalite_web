    <td colspan="2" align="center">
    {{ knp_pagination_render(outils) }}
<td>
     </div> #}
       <div class="d-flex justify-content-center">
  {% do outils.SetPageRange(2) %}
  {{ knp_pagination_render(outils, "outils/pagination.html.twig") }}
</div>
 

{% endblock %}
