





<html>
    <head>
        <meta charset="utf-8">
        <title>Reclamation</title>
        <style>
            * {
                box-sizing: border-box;
            }
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                color: #333333;
            }
            header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                background-color: #f2f2f2;
                padding: 20px;
            }


            .info {
                display: flex;
                flex-direction: column;
                align-items: flex-end;
                text-align: right;
            }
            h1 {
                margin-top: 0;
                margin-bottom: 20px;
            }
            table {
                width: 100%;
                border-collapse: collapse;
            }
            th,
            td {
                text-align: left;
                padding: 8px;
                border-bottom: 1px solid #dddddd;
            }
            th {
                background-color: #f2f2f2;
            }
            .total {
                display: flex;
                justify-content: flex-end;
                margin-top: 20px;
            }
            .total span {
                font-weight: bold;
            }
        </style>
    </head>
    <body>
        <header>
            <img src="https://i.ibb.co/z6zyTw5/apple-touch-icon.png" alt="apple-touch-icon" border="0">

            <div class="info">
                <h2>Municipalité De Tunis</h2>
                <p>10 rue utique, Elghazala,Ariana</p>
                <p>Téléphone : 99944560
                </p>
                <p>Email : info@Municipalité.com</p>
            </div>
           Vos Reclamations 
        </header>
        <main>




            <br>
            <br>
            <br>
            <h1 align="center" > Reclamations</h1>
</center>
      
  <table class="table" align="center">
        <thead>
            <tr>
             
                <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Etat</th>
                <th>Description</th>
                <th>Date_reclamation</th>
                <th>Type</th>
            </tr>
             
            </tr>
        </thead>
        <tbody>
         {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.nom }}</td>
                <td>{{ reclamation.prenom }}</td>
                <td>{{ reclamation.email }}</td>
                <td>{{ reclamation.tel }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                 <td>{{ reclamation.type }}</td>
            </tr>  
        {% endfor %}
        </tbody>
    </table>
</html>

     

  

























































































































