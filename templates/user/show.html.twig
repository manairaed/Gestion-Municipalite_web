{% extends 'baseback.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<br>
	<br>
	<br>
	<br>
	<center>
		<h1>User</h1>
	</center>


	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>

			<tr>
				<th>Nom_Util</th>
				<td>{{ user.nomUtil }}</td>
			</tr>
			<tr>
				<th>Prenom_Util</th>
				<td>{{ user.prenomUtil }}</td>
			</tr>
			<tr>
				<th>Tel</th>
				<td>{{ user.tel }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.adresse }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_user_index') }}" class="btn btn-success">back to list</a>

	<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">edit</a>

